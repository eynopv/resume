<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, "sans-serif";
        font-size: 16px;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-weight: normal;
        font-size: 1em;
        padding: 0;
        margin: 0;
      }

      h1,
      h2 {
        font-size: 1.2em;
        font-weight: 700;
      }

      h2 {
        margin-top: 1em;
        margin-bottom: 0.5em;
      }

      h3 {
        margin-top: 0.5em;
      }

      p {
        padding: 0;
        margin: 0;
      }

      ul {
        list-style-position: inside;
        margin: 0;
      }
    </style>
    <title>{{ title }}</title>
  </head>
  <body>
    <main>
      <h1>{{ basics.name }}, {{ basics.label }}</h1>
      <p>
        {{ basics.email }} | {{ basics.phone }} | {{ basics.location.city }}, {{ basics.location.countryCode }}
      </p>

      <section>
        <h2>Summary</h2>
        <p>{{ basics.summary }}</p>
      </section>

      <section>
        <h2>Experience</h2>
        {% for w in work %}
        <section>
          <h3>
            {{ w.position }}, {{ w.name }}, {{ w.startDate | format_date }} - {{ w.endDate | format_date if
            w.endDate else "Ongoing"}}
          </h3>
          <ul>
            {% for h in w.highlights %}
            <li>{{ h }}</li>
            {% endfor %}
          </ul>
          {% endfor %}
        </section>
      </section>

      <section>
        <h2>Certificates</h2>
        <ul>
          {% for c in certificates %}
          <li>{{ c.name }}, {{ c.date | format_date }}</li>
          {% endfor %}
        </ul>
      </section>

      <section>
        <h2>Skills</h2>
        <p>
        {{ skills | join_skills }}
        </p>
      </section>

      <section>
        <h2>Education</h2>
        {% for e in education %}
        <div>
          {{ e.institution }} {{ e.studyType }} degree in {{ e.area }}, {{
          e.endDate }}
        </div>
        {% endfor %}
      </section>
    </main>
  </body>
</html>
